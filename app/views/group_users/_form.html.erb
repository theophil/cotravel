<div class="row">
  <div class="col-md-10" id = "add-user" > 
  <%= simple_form_for group_user, html: { class: 'form-horizontal' } do |f| %>
      <div class="col-sm-offset-1 col-sm-10">
      <%= f.input :user_id, collection: User.where.not(id: current_user.id).alphabetical, :label_method => lambda { |owner| "#{owner.first_name} #{owner.last_name}" }, prompt: "Find your friends...", label: false%>
    	<%= f.hidden_field :group_id, :value => Group.last.id %>
      <%= f.button :submit, 'Add friend to your group', class: "btn btn-primary" %>
      </div>
  <% end %>
</div>
  <div class="col-md-3" ></div>

</div>
