<div class="modal-dialog">
  <div class="modal-content">
    <%= simple_form_for @event, remote: true do |f| %>
      <div class="modal-body">
      <ul class="errors"></ul>
      <div >
        <%= f.input :name, placeholder: 'Name'%>
        <%= f.input :start_time, minute_step: 15, :label => 'Start Time'%>
        <%= f.input :end_time, minute_step: 15, label: "End Time" %>
        <%= f.input :cost, label: "Cost" %>
        <%= f.input :location_name, label: "Location" %>
        <%= f.hidden_field :longitude, :value => 0, label: "Longitude" %>
        <%= f.hidden_field :latitude, :value => 0, label: "Latitude" %>
      </div>
      
       </div>
      <!-- <div class="actions"> -->
      <div class="modal-footer actions">
        <%= f.button :submit, class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>