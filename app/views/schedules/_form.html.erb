<div class="container"%>
<div class="col-md-3" ></div>
<div class="col-md-6" >
	
	<%= simple_form_for(@schedule, :html => { class: 'form-horizontal' }) do |f| %>
			<p id = "form-title">Start a New Schedule</p>
			<%= f.input :name , :label => 'Name'%>
	    <%= f.input :location , :label => 'Location'%>
	    <%= f.input :start_date, as: :date, :label => 'Start Date'%>
	    <%= f.input :end_date, as: :date, :label => 'End Date'%>
	    <%= f.hidden_field :group_id, :value => Group.last.id %>
	  <div class="actions">
	    <%= f.button :submit, class: "btn btn-primary" %>
	  </div>

	<% end %>
</div>
</div>